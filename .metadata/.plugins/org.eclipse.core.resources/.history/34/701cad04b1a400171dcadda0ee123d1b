package main;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.FileWriter;
import java.io.IOException;
import java.io.Writer;
import java.util.Scanner;

import main.listaEncadeada.ListaEncadeada;

public class FileManager {
	
	private static Scanner scan;
	
	public static ListaEncadeada<String> getLinhas(File file) {
		try{
			ListaEncadeada<String> out = new ListaEncadeada<String>(true);			
			scan = new Scanner(file);
			
			while(scan.hasNextLine()){
				out.add(scan.nextLine());
			}
			
			return out;
		}catch(FileNotFoundException fNFEx){
			return null;
		}
	}
	
	public static boolean outputToFile(File file, ListaEncadeada<String> linhas){
		try{
			BufferedWriter writer = new BufferedWriter(new FileWriter(file));
			writer.flush();
			
			String temp;
			for(Object o: linhas.getInfosAsArray()){
				temp = (String) o;
				writer.write(temp);
			}
			
			return true;
			
		}catch(FileNotFoundException ex){
			ex.printStackTrace();
			return false;
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			return false;
		}
		
	}
	
}
