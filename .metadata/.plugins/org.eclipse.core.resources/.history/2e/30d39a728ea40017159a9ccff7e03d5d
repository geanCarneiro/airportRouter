package main.listaEncadeada;

public class ListaEncadeada<T> {

	private No<T> raiz;
	private int tam;
	
	public ListaEncadeada(){
		this.raiz = null;
		this.tam = 0;
	}
	
	public No<T> add(T elem){
		No<T> novo = add(this.raiz, elem);
		this.raiz = novo;
		return novo;
	}
	
	private No<T> add(No<T> atual, T elem){
		if(atual == null){
			return new No<T>(elem);
		}else {
			No<T> novo = add(atual.getProx(), elem);
			if(novo == null){
				return null;
			} else if(atual.getInfo().equals(novo.getInfo())){
				return null;
			} else {
				atual.setProx(novo);
				return atual;
			}
		}
	}
	
	public No<T> getRaiz() {
		return raiz;
	}
	
	public void setRaiz(No<T> raiz) {
		this.raiz = raiz;
	}
	
	public int getTam() {
		return tam;
	}
	
	public void setTam(int tam) {
		this.tam = tam;
	}

	@Override
	public String toString() {
		
		String out = "{ ";
		No<T> atual = this.raiz;
		while(atual != null){
			out += atual.toString();
			if(atual.getProx() != null)
				out += ", ";
			atual = atual.getProx();
		}
		out += " }";
		
		return out;
		
	}
	
	
	
}
