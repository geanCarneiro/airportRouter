package main;

import java.io.File;

public class Main {

	public static void main(String[] args) {
		
		File bin = new File(ClassLoader.getSystemResource("").getPath());
		
		File pastaInput = new File(bin.getAbsolutePath() + "/input");
		File pastaOutput = new File(bin.getAbsolutePath() + "/output");
		
		File[] files = pastaInput.listFiles(new FileFilter());
		for(File f: files)
			System.out.println(f.getPath());
		
		System.out.println();
		
		System.out.println(pastaInput.getPath() + " - " + pastaInput.exists());
		System.out.println(pastaOutput.getPath() + " - " + pastaInput.exists());
		
		
	}

}
